<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#222">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical"
    tools:context=".Activities.ExerciseDetails_activity">


    <TextView
        android:id="@+id/previousText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Previous day"
        android:textColor="@color/lightLetters"
        android:textAlignment="center"
        android:textSize="30sp"
        android:layout_weight="1"/>

    <TextView
        android:id="@+id/exerciseName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="exerciseName"
        android:textColor="@color/lightLetters"
        android:layout_below="@+id/previousText"
        android:textAlignment="center"
        android:textSize="50sp"/>

    <LinearLayout
        android:id="@+id/previousWeightLineID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_below="@id/exerciseName"
        android:padding="2dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="1dp"
            android:background="@android:color/holo_blue_dark"
            android:text="Weight"
            android:textAlignment="center"
            android:textColor="@color/lightLetters"
            android:textSize="25sp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/previousWeightID"
            android:textAlignment="center"
            android:layout_marginHorizontal="1dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_orange_dark"
            android:textSize="25sp"
            android:text="default"
            android:textColor="@color/lightLetters"
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/previousSet1LineID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_below="@id/previousWeightLineID"
        android:padding="2dp">

        <TextView
            android:layout_width="0dp"
            android:textAlignment="center"
            android:layout_marginHorizontal="1dp"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_blue_dark"
            android:text="Set1"
            android:textColor="@color/lightLetters"
            android:textSize="25sp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/previousSet1ID"
            android:layout_marginHorizontal="1dp"
            android:textAlignment="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_orange_dark"
            android:text="default "
            android:textColor="@color/lightLetters"
            android:textSize="25sp"
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/previousSet2LineID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_below="@id/previousSet1LineID"
        android:padding="2dp">

        <TextView
            android:layout_width="0dp"
            android:textAlignment="center"
            android:layout_marginHorizontal="1dp"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_blue_dark"
            android:text="Set2"
            android:textColor="@color/lightLetters"
            android:textSize="25sp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/previousSet2ID"
            android:layout_marginHorizontal="1dp"
            android:textAlignment="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_orange_dark"
            android:text="default "
            android:textColor="@color/lightLetters"
            android:textSize="25sp"
            android:layout_weight="1"/>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/previousSet3LineID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_below="@id/previousSet2LineID"
        android:padding="2dp">

        <TextView
            android:layout_width="0dp"
            android:textAlignment="center"
            android:layout_marginHorizontal="1dp"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_blue_dark"
            android:text="Set3"
            android:textColor="@color/lightLetters"
            android:textSize="25sp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/previousSet3ID"
            android:layout_marginHorizontal="1dp"
            android:textAlignment="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_orange_dark"
            android:text="default "
            android:textColor="@color/lightLetters"
            android:textSize="25sp"
            android:layout_weight="1"/>
    </LinearLayout>

    <TextView
        android:id="@+id/currentText"
        android:layout_below="@id/previousSet3LineID"
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Today"
        android:textColor="@color/lightLetters"
        android:textAlignment="center"
        android:textSize="30sp"
        />

    <LinearLayout
        android:id="@+id/currentWeightLineID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_below="@id/currentText"
        android:padding="2dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="1dp"
            android:textAlignment="center"
            android:background="@android:color/holo_blue_dark"
            android:text="Weight"
            android:textColor="@color/lightLetters"
            android:textSize="40sp"
            android:layout_weight="1"/>

        <EditText
            android:id="@+id/currentWeightID"
            android:layout_marginHorizontal="1dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_orange_dark"
            android:textSize="40sp"
            android:text=""
            android:textAlignment="center"
            android:inputType="number"
            android:textColor="@color/lightLetters"
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/currentSet1LineID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_below="@id/currentWeightLineID"
        android:padding="2dp">

        <TextView
            android:layout_width="0dp"
            android:layout_marginHorizontal="1dp"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_blue_dark"
            android:text="Set1"
            android:textColor="@color/lightLetters"
            android:textSize="40sp"
            android:layout_weight="1"/>

        <EditText
            android:id="@+id/currentSet1ID"
            android:layout_marginHorizontal="1dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_orange_dark"
            android:textSize="40sp"
            android:text=""
            android:textAlignment="center"
            android:inputType="number"
            android:textColor="@color/lightLetters"
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/currentSet2LineID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_below="@id/currentSet1LineID"
        android:padding="2dp">

        <TextView
            android:layout_width="0dp"
            android:textAlignment="center"
            android:layout_marginHorizontal="1dp"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_blue_dark"
            android:text="Set2"
            android:textColor="@color/lightLetters"
            android:textSize="40sp"
            android:layout_weight="1"/>

        <EditText
            android:id="@+id/currentSet2ID"
            android:layout_marginHorizontal="1dp"

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_orange_dark"
            android:textSize="40sp"
            android:text=""
            android:textAlignment="center"
            android:inputType="number"
            android:textColor="@color/lightLetters"
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/currentSet3LineID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_below="@id/currentSet2LineID"
        android:padding="2dp">

        <TextView
            android:layout_width="0dp"
            android:textAlignment="center"
            android:layout_marginHorizontal="1dp"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_blue_dark"
            android:text="Set3"
            android:textColor="@color/lightLetters"
            android:textSize="40sp"
            android:layout_weight="1"/>

        <EditText
            android:id="@+id/currentSet3ID"
            android:layout_marginHorizontal="1dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_orange_dark"
            android:textSize="40sp"
            android:text=""
            android:textAlignment="center"
            android:inputType="number"
            android:textColor="@color/lightLetters"
            android:layout_weight="1"/>
    </LinearLayout>



    <Button
        android:id="@+id/doneButtonID"
        android:layout_below="@id/currentSet3LineID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:text="Done"
        android:textColor="@color/lightLetters"
        android:textSize="40sp"
        android:background="@android:color/holo_green_dark"/>

</RelativeLayout>
</ScrollView>